@model AuthorVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.Id" />
            <div class="form-group">
                <label asp-for="Author.Name" class="control-label"></label>
                <input asp-for="Author.Name" class="form-control" />
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Surname" class="control-label"></label>
                <input asp-for="Author.Surname" class="form-control" />
                <span asp-validation-for="Author.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Nickname" class="control-label"></label>
                <input asp-for="Author.Nickname" class="form-control" />
                <span asp-validation-for="Author.Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.CountryId" class="control-label"></label>
                <select asp-for="Author.CountryId" class="form-control" asp-items="Model.CountryList"></select>
                <span asp-validation-for="Author.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

